<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Address</th>
      <th>Town</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.Page %></td>
        <td><%= order.address %></td>
        <td><%= order.town %></td>
        <td><%= order.city %></td>
        <td><%= order.postcode %></td>
        <td><%= order.email %></td>
        <td><%= order.phone %></td>
        <td><%= order.message %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

